//PROJETO DE UMA CALCULADORA EXPECIAL COM ALGUMAS FUNCOES DADAS COMO EXEMPLO NA AULA DO PROFESSOR GUSTAVO GUANABARA.

    private void BtnCalcActionPerformed(java.awt.event.ActionEvent evt) {
        // TODO add your handling code here:
        int num = Integer.parseInt(txtNum.getValue().toString());
        //RESTO DA DIVISAO POR 2
        int r = num % 2;
        lblResto.setText(Integer.toString(r));
        //ELEVADO AO CUBO
        double c = Math.pow(num, 3);
        lblCubo.setText(Double.toString(c));
        //RAIZ QUADRADA
        double rq = Math.sqrt(num);
        lblRaizq.SetTex(String.format("%.2f",rq));
        //RAIZ CUBICA
        double rc = Math.cbrt(num);
        lblRaizcu.setTex(String.format("%.2f",rc));
        //VALOR ABSOLUTO
        int abs = Math.abs(num);
        lblAbs.setText(Integer.toString(abs));


        panCalc.setVisible(true);

    }

        /* Create and display the form */
        java.awt.EventQueue.invokeLater(new Runnable() {
            public void run() {
                new TelaCalc().setVisible(true);

//PROJETO DE UM VERIFICADOR DE IDADE QUE TAMBEM PODE SER USADO PARA IDENTIFICAR SE É MAIOR OU MENOR DE IDADE EM ALGUM SITE ADULTO.
 private void btnCalcActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        int ano = Integer.parseInt(txtAno.getText());
        int idade = 2022 - ano;
        lblIdade.setText(Integer.toString(idade));
        String sit = (idade>=18)?"MAIOR DE IDADE":"MENOR DE IDADE";
        lblSituacao.setText(sit);
       

    }                                       

            /* Create and display the form */
        java.awt.EventQueue.invokeLater(new Runnable() {
            public void run() {
                new Telaidade().setVisible(true);
            }
        });
    }

// JOGO GERADOR DE NUMEROS ALEATORIOS DE 1 A 10 EM JAVA
 private void btnPalpiteActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
       double n = 1 + Math.random() * (11 - 1);
       int valor = (int)n;
       int num = Integer.parseInt(txtVal.getValue().toString());
       String f1 = "<html>ACERTOU! DESTA VEZ ME GANHOU, VAMOS MAIS UMA VEZ.</html>";
       String f2 = "<html>ERROU EU PENSEI NO VALOR: " + valor + "</html>";
       String res = (valor == num)?f1:f2;
       lblFrase.setFont(new Font("Arial Black", Font.PLAIN, 14));
       lblFrase.setText(res);
    } 
    
    //CALCULADORA DE VOTO.
int a = Integer.parseInt(txtAno.getText());
        int i = 2022 - a;
        if (i < 16){
            lblR.setText("Não vota!");
            lblT.setText("Menor de idade!");
        } else {
            if((i>=16 && i<18) || (i>70)){
                lblR.setText("Voto Opcional!");  
        }else {
                lblR.setText("Voto Obrigatório!");
                lblT.setText("Obrigatorio porque é maior de 18");
            }  
        }
    }  
//NUMERO FATORIAL ATE 12. USANDO WHILE
 private void txtNStateChanged(javax.swing.event.ChangeEvent evt) {                                  
        // TODO add your handling code here:
        int n = Integer.parseInt(txtN.getValue().toString());
        int f = 1;
        int c = n;
        while (c>=1){
          f*=c;
          c--;
        }
        lblFat.setText(Integer.toString(f));
    }   
    
    // FATORIAL
     Scanner in = new Scanner(System.in);
        int num;
        do {
            System.out.print("Digite um número: ");
            num = in.nextInt();
        } while (num < 0);
        if (num == 0) {
            System.out.print("0! = 1");
        }
        else {
            System.out.printf("%d! = %d x ", num, num);
            int fatorial = num;
            for (int i = num -1; i > 0; i--) {
                fatorial *= i;
                if (i > 1) {
                    System.out.printf("%d x ", i);
                }
                else {
                    System.out.printf("%d = ", i);
                }
            }
            System.out.printf("%d.", fatorial);
        }       
    }    
}
